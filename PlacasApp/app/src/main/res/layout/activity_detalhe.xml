<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#19baff"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="br.com.willian.aula02.detalheActivity">

    <ImageView

        android:id="@+id/img_detalhe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/africa_do_sul_pic" />

    <TextView
        android:id="@+id/txt_sigla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_detalhe"
        android:layout_alignRight="@+id/img_detalhe"
        android:background="#123"
        android:padding="20dp"
        android:text="BR"
        android:textColor="#FFF"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_detalhe"
        android:layout_margin="15dp"
        android:gravity="center"
        android:text="BRASIL"
        android:textColor="#000"
        android:textSize="28sp"
        android:id="@+id/txt_capital"/>

</RelativeLayout>
